        <item name="colorPrimary">@color/medium_turquoise</item>
        <item name="colorPrimaryVariant">@color/carolina_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_cornflower_blue</item>
        <item name="colorSecondaryVariant">@color/dark_cornflower_blue</item>
        <item name="colorOnSecondary">@color/medium_jungle_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/billy_money_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
